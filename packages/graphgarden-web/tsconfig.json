{
	"compilerOptions": {
		"target": "ES2023",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"declaration": true,
		"declarationDir": "dist",
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"rootDir": "src",
		"isolatedModules": true,
		"skipLibCheck": true,
		"lib": ["ES2023", "DOM", "DOM.Iterable"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts"]
}
